{
  "name": "transform-file-casing",
  "version": "0.0.0",
  "description": "Transform all file-casing in an entire code repository",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": "./dist/index.mjs",
  "files": [
    "dist",
    "docs"
  ],
  "bin": {
    "transform-files": "dist/transform-files-bin.mjs"
  },
  "scripts": {
    "build": "tsup-node",
    "dev": "tsup-node --watch",
    "test": "vitest",
    "format": "prettier --write .",
    "lint": "eslint . --max-warnings 0",
    "lint:format": "prettier --check .",
    "type-check": "tsc --noEmit",
    "prepare": "pnpm run type-check && pnpm run build"
  },
  "author": "Thijs Koerselman",
  "license": "MIT",
  "keywords": [
    "transform",
    "file",
    "casing",
    "rename",
    "case",
    "typescript",
    "javascript"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.12",
    "meow": "^13.2.0",
    "remeda": "^1.56.0",
    "simple-git": "^3.24.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/meow": "^6.0.0",
    "@types/node": "^20.12.2",
    "@types/source-map-support": "^0.5.10",
    "eslint": "^8",
    "eslint-config-0x80": "^0.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-jsdoc": "^1.3.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.3",
    "vitest": "^1.4.0"
  },
  "packageManager": "pnpm@9.0.0+sha256.bdfc9a7b372b5c462176993e586492603e20da5864d2f8881edc2462482c76fa"
}
